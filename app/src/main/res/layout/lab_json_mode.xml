<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/jsonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Лаборатория ИИ Альтаира"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/jsonInput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="JSON-команда"
        android:gravity="top|start"
        android:background="@android:drawable/editbox_background"
        android:padding="8dp"
        android:inputType="textMultiLine"
        android:textSize="16sp" />

    <Button
        android:id="@+id/jsonExecuteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выполнить JSON"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/jsonHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="История JSON-команд:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/jsonHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:background="#222222"
        android:textColor="#FFFFFF"
        android:padding="8dp" />

</LinearLayout>
